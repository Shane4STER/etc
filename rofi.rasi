configuration {
	modes: "window,drun,run,combi,filebrowser";
	terminal: "foot";
	run-command: "swaymsg exec -- {cmd}";
	combi-modes: "window,drun";
  matching: "fuzzy";
  sorting-method: "fzf";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "/usr/share/rofi/themes/glue_pro_blue.rasi"
